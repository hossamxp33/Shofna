<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/image_shimmer"
            android:layout_width="60dp"
            android:layout_height="@dimen/placeholder_image"
            android:background="@drawable/shimmer_raduis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/name"
            android:layout_width="60dp"
            android:layout_height="10dp"
            android:layout_marginTop="4dp"
            android:background="@color/placeholder_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_shimmer" />



    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        app:layout_constraintRight_toLeftOf="@+id/constraintLayout3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout">

        <View
            android:id="@+id/image_shimmer2"
            android:layout_width="60dp"
            android:layout_height="@dimen/placeholder_image"
            android:background="@drawable/shimmer_raduis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/name2"
            android:layout_width="60dp"
            android:layout_height="10dp"
            android:layout_marginTop="4dp"
            android:background="@color/placeholder_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_shimmer2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        app:layout_constraintRight_toLeftOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/image_shimmer3"
            android:layout_width="60dp"
            android:layout_height="@dimen/placeholder_image"
            android:background="@drawable/shimmer_raduis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/name3"
            android:layout_width="60dp"
            android:layout_height="10dp"
            android:layout_marginTop="4dp"
            android:background="@color/placeholder_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_shimmer3" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="16dp"

        app:layout_constraintRight_toLeftOf="@+id/constraintLayout2"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/image_shimmer4"
            android:layout_width="60dp"
            android:layout_height="@dimen/placeholder_image"
            android:background="@drawable/shimmer_raduis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/name4"
            android:layout_width="60dp"
            android:layout_height="10dp"
            android:layout_marginTop="4dp"
            android:background="@color/placeholder_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_shimmer4" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"

        android:orientation="vertical"
        app:layout_constraintRight_toLeftOf="@+id/constraintLayout4"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/image_shimmer5"
            android:layout_width="60dp"
            android:layout_height="@dimen/placeholder_image"
            android:background="@drawable/shimmer_raduis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/name5"
            android:layout_width="60dp"
            android:layout_height="10dp"
            android:layout_marginTop="4dp"
            android:background="@color/placeholder_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_shimmer5" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>